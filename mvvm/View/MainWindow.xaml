<Window x:Class="mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button Content="{Binding StartText}" Command="{Binding StartCommand}" CommandParameter="{Binding Text, ElementName=textBox}" Height="23"></Button>
            <Button Content="{Binding MapKreator}" Command="{Binding MapKreatorCommand}" Height="23"></Button>
            <Button Content="Konfiguracja kinectow" Command="{Binding KincetConfigurationCommand}"></Button>
            <Button Content="{Binding AboutAuthor}" Command="{Binding AuthorCommand}" Height="23"></Button>
        </StackPanel>
        
    </Grid>
</Window>
